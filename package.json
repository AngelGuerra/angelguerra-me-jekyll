{
  "name": "angelguerra",
  "version": "1.0.0",
  "description": "Ángel Guerra's personal webpage",
  "private": true,
  "scripts": {
    "clean": "jekyll clean && ./node_modules/.bin/rimraf assets/webpack",
    "dev": "./node_modules/.bin/webpack --progress --profile --colors --watch --verbose --display-error-details | jekyll serve --livereload --incremental --host=0.0.0.0",
    "build": "jekyll clean && ./node_modules/.bin/rimraf assets/webpack && ./node_modules/.bin/webpack --env=prod --progress --profile --colors --verbose --display-error-details && JEKYLL_ENV=production jekyll build && ./node_modules/.bin/purgecss --config ./purgecss.config.js"
  },
  "author": "Ángel Guerra",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.2.0",
    "eslint-loader": "^4.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "simple-icons": "^2.17.1",
    "stylelint": "^13.6.1",
    "stylelint-webpack-plugin": "^2.1.0",
    "tailwindcss": "^1.4.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
